<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="com.edu.paytonramirezg.clinchacha.Screen1"
    android:background="#FFFFFF">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:id="@+id/videoView"
        android:layout_above="@+id/relativeLayout17"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/relativeLayout17"
        android:background="#2d5f12"
        android:layout_above="@+id/relativeLayout5"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/relativeLayout5"
        android:layout_above="@+id/rl_bottom"
        android:background="#ffffff">


        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="#93c9a4"
            android:id="@+id/relativeLayout16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/relativeLayout6"
            android:layout_toStartOf="@+id/relativeLayout6"
            android:visibility="visible"
            android:layout_marginRight="1dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar"
                android:id="@+id/bt_iniciar"
                android:textSize="20dp"
                android:onClick="onLogin"
                android:background="#222423"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout6"
            android:background="#222423"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_marginLeft="1dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:id="@+id/bt_registrar"
                android:textSize="20dp"
                android:background="#222423"
                android:onClick="onRegister"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:id="@+id/rl_bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="&quot;Â¡Contrata tu Servicio Clin hoy!&quot;"
            android:id="@+id/tv_add"
            android:textStyle="italic"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Encuentranos en nuestra pagina web: www.clinapp.es"
            android:id="@+id/tv_webpagelynk"
            android:textColor="#2d549d"
            android:onClick="onRegister"
            android:textStyle="italic"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/relativeLayout11"
        android:background="#2d5f12"
        android:layout_above="@+id/videoView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:id="@+id/imageView22"
        android:src="@mipmap/ic_newlogo"
        android:layout_above="@+id/relativeLayout5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />


</RelativeLayout>
