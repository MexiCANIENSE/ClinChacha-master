<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    tools:context="com.edu.paytonramirezg.clinchacha.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout4" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:id="@+id/bt_confirmarR"
            android:textSize="17pt"
            android:textColor="#ffffff"
            android:background="#93c9a4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onConfirmR" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#3c7557"
        android:id="@+id/relativeLayout18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3c7557"
        android:id="@+id/relativeLayout8"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/scrollView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#93c9a4"
        android:id="@+id/relativeLayout9"
        android:layout_below="@+id/relativeLayout18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa los datos requeridos"
            android:id="@+id/tv_reg_instruct"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="9pt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout4"
        android:id="@+id/relativeLayout10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView25"
            android:layout_above="@+id/relativeLayout4"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_logoclin1"
            android:layout_gravity="center_horizontal" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/relativeLayout9"
        android:layout_above="@+id/relativeLayout10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="30dp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:showDividers="beginning|end"
                android:gravity="center_horizontal|left" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView26"
                    android:src="@drawable/username"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_fullname"
                    android:hint="Nombre completo"
                    android:foregroundTint="#93c9a4"
                    android:backgroundTint="#93c9a4"
                    android:textColor="#93c9a4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:showDividers="beginning|end"
                android:gravity="center_horizontal|left">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/username"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_usernameR"
                    android:hint="Nombre de usuario"
                    android:foregroundTint="#93c9a4"
                    android:backgroundTint="#93c9a4"
                    android:textColor="#93c9a4" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|left">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/password"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/et_passwordR"
                    android:hint="Contraseña"
                    android:foregroundTint="#93c9a4"
                    android:backgroundTint="#93c9a4"
                    android:textColor="#93c9a4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|left">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/password"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/et_passwrodCR"
                    android:hint="Confirmar contraseña"
                    android:foregroundTint="#93c9a4"
                    android:backgroundTint="#93c9a4"
                    android:textColor="#93c9a4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|left">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/mail"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/et_emailR"
                    android:hint="E-mail"
                    android:foregroundTint="#93c9a4"
                    android:backgroundTint="#93c9a4"
                    android:textColor="#93c9a4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|left"
                android:backgroundTint="#93c9a4">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView5"
                    android:layout_marginLeft="65dp"
                    android:src="@drawable/calander"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/et_birthdayR"
                    android:hint="Fecha de Nac. (D/M/A)"
                    android:foregroundTint="#93c9a4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|left">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView6"
                    android:layout_marginLeft="65dp"
                    android:src="@drawable/gender"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_genderR" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|left">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView7"
                    android:layout_marginLeft="65dp"
                    android:src="@drawable/house"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:ems="10"
                    android:id="@+id/et_addressR"
                    android:hint="Dirección"
                    android:foregroundTint="#93c9a4"
                    android:backgroundTint="#93c9a4"
                    android:textColor="#93c9a4" />
            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yo acepto Terminos y Condiciones de uso"
                    android:id="@+id/checkBox"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:buttonTint="#93c9a4" />
            </RelativeLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
