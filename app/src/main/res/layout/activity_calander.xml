<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edu.paytonramirezg.clinchacha.CalanderActivity">

    <CalendarView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/calendarView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:touchscreenBlocksFocus="true"
        android:layoutMode="opticalBounds"
        android:weekSeparatorLineColor="#5f9771"
        android:weekNumberColor="#ffffff"
        android:showWeekNumber="true"
        android:focusedMonthDateColor="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/timePicker">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="#5f9771"></RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ingresa tu DirecciÃ³n:"
            android:id="@+id/textView36"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editText2"
            android:layout_below="@+id/textView36"
            android:foregroundTint="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:id="@+id/button"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#93c9a4"
            android:textColor="#fff"
            android:shadowColor="#565555"
            android:padding="3dp" />

    </RelativeLayout>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:headerBackground="#93c9a4"
        android:timePickerMode="clock"
        android:numbersSelectorColor="#93c9a4"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/calendarView"
        android:layout_toEndOf="@+id/calendarView" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="50dp"
        android:id="@+id/rl_rescal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView32"
            android:src="@drawable/anuncioreservados"
            android:cropToPadding="false"
            android:padding="75dp" />
    </RelativeLayout>

</RelativeLayout>
